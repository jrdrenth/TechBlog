<div class="post card">
  <div class="card-header">
    <h2>Update Post</h2>
  </div>
  <form class="card-body">
    <input type="hidden" name="post-id" value="{{post.id}}" />

    <label class="form-label" for="post-title">Title:</label>
    <input type="text" id="title-text" name="post-title" value="{{post.title}}" class="form-input" />

    <label class="form-label" for="post-content">Content:</label>
    <textarea name="post-content" id="content-text" class="form-input">{{post.content}}</textarea>

    <button type="button" id="update-btn" class="btn">Update</button>

    <button type="button" id="delete-btn" class="btn">Delete</button>
  </form>
</div>

<script src="/js/updatePost.js"></script>